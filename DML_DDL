/*ADICIONANDO COLUNA NA ORDEM ESPECÍFICA*/

ALTER TABLE PRODUTO
ADD COLUMN PESO FLOAT(10,2) NOT NULL
AFTER NOME_PRODUTO;

mysql> ALTER TABLE PRODUTO
    -> ADD COLUMN PESO FLOAT(10,2) NOT NULL
    -> AFTER NOME_PRODUTO;
Query OK, 0 rows affected (0.17 sec)
Records: 0  Duplicates: 0  Warnings: 0

