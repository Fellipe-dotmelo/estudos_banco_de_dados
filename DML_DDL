SELECT * FROM CLIENTE
WHERE IDCLIENTE = 7;

mysql> SELECT * FROM CLIENTE
    -> WHERE IDCLIENTE = 7;
+-----------+-------+------+-------+----------+
| IDCLIENTE | NOME  | SEXO | EMAIL | CPF      |
+-----------+-------+------+-------+----------+
|         7 | PAULA | F    | NULL  | 77437493 |
+-----------+-------+------+-------+----------+
1 row in set (0.02 sec)

SELECT * FROM CLIENTE
WHERE IDCLIENTE = 8;

UPDATE CLIENTE
SET CPF = '568.693.223-48'
WHERE IDCLIENTE = 5;

INSERT INTO CLIENTE VALUES(NULL, 'AVESTRUZ', 'M', NULL, '000.000.000-00');

/*DELETE*/

DELETE FROM CLIENTE
WHERE IDCLIENTE = 8;

/* DML = INSERIR(INSERT), ATUALIZAR(UPDATE) E DELETAR(DELETE);*/
INSERT INTO CLIENTE VALUES(NULL, 'AVESTRUZ', 'M', NULL, '000.000.000-00');

UPDATE CLIENTE
SET EMAIL = 'CLARA.SOUZA@IG.COM.BR'
WHERE IDCLIENTE = 4;

DELETE FROM CLIENTE
WHERE IDCLIENTE = 8;

/* DDL - DATA DEFINITION LANGUAGE */

CREATE TABLE PRODUTO(
    IDPRODUTO INT PRIMARY KEY AUTO_INCREMENT, 
    NOME_PRODUTO VARCHAR(30) NOT NULL,
    PRECO INT, 
    FRETE FLOAT(10, 2) NOT NULL 
);

mysql> CREATE TABLE PRODUTO(
    ->     IDPRODUTO INT PRIMARY KEY AUTO_INCREMENT,
    ->     NOME_PRODUTO VARCHAR(30) NOT NULL,
    ->     PRECO INT,
    ->     FRETE FLOAT(10, 2) NOT NULL
    -> );
Query OK, 0 rows affected (0.13 sec)

mysql> DESC PRODUTO;
+--------------+-------------+------+-----+---------+----------------+
| Field        | Type        | Null | Key | Default | Extra          |
+--------------+-------------+------+-----+---------+----------------+
| IDPRODUTO    | int(11)     | NO   | PRI | NULL    | auto_increment |
| NOME_PRODUTO | varchar(30) | NO   |     | NULL    |                |
| PRECO        | int(11)     | YES  |     | NULL    |                |
| FRETE        | float(10,2) | NO   |     | NULL    |                |
+--------------+-------------+------+-----+---------+----------------+
4 rows in set (0.00 sec)

